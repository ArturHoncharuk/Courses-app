<div class="row">

    <div class="col s6 offset-s3">
        {{#if error}}
        <p class="alert">{{error}}</p>
        {{/if}}
        <h1>Новый пароль</h1>
        <form action="/auth/password" method="POST">
            <div class="input-field">
                <input id="paswword" name="password" type="password" class="validate" required>
                <label for="password">Новый пароль</label>
                <span class="helper-text" data-error="Введите новый пароль"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">
            
            <div class="buttons__container">
                <p><a class="btn btn-primary back-button" href="/auth/login">Назад</a></p>
                <button class="btn btn-primary" type="submit">Восстановить пароль</button>
            </div>
        </form>
    </div>
</div>
</div>